{%- assign href = 'about-founder.css' | asset_url -%}
{% render 'link', href: href %}

<style>
    :root .color-custom {
      --theme-color:{{ section.settings.section_text_color_scheme }};
      --theme-heading:{{ section.settings.section_heading_color_scheme }};
      --theme-sub-heading:{{ section.settings.section_sub_heading_color_scheme }};
      --theme-link-color:{{ section.settings.section_links_color_scheme }};
      --theme-background:{{ section.settings.section_background_color_scheme }};
    }
</style>


<section class="about-founder-sec pb-4 md:pb-10 lg:py-14 xl:py-20 4xl:py-110 section-{{section.id}} color-{{ section.settings.color_scheme }}" id="shopify-{{ section.id }}">
    <div class="container">
        <div class="image_text_row flex items-center flex-col {{ section.settings.image_position }}">
            <div class="image_panel lg:w-1/2">
                {%- if section.settings.url-image != blank -%}
                    <img class="lazyload w-full h-full object-cover" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                     data-src="{{ section.settings.url-image | img_url:'724x' }}" alt="{{ section.settings.url-image.alt }}">
                {%- endif -%}
            </div>            
            <div class="text-black-box flex items-center py-[42px] lg:py-[70px] lg:pl-0  flex-1">
                <div class="text-{{ section.settings.align__mobile }} md:text-{{ section.settings.align__desktop }} w-full lg:max-w-[575px] mx-auto">
                    <h2 class="pb-5 md:pb-6 font-dmserif font-normal text-font27 md:text-font30 lg:text-font40">
                        {{ section.settings.main_title }}
                    </h2>
                    <div class="pb-5 md:pb-6 space-y-5 xl:space-y-9 font-inter font-normal text-font14 md:text-font16">
                        {{ section.settings.content_description }}
                    </div>
                    <div class="pb-2 font-inter font-medium text-font14 md:text-font16">
                        {{ section.settings.name }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<style>
    .about-founder-sec .flex-col .text-black-box {
        flex-direction: column !important;
        padding-left: 25px;
        padding-right: 25px;
    }
    @media (min-width: 1024px) {
        .about-founder-sec .flex-row {
            flex-direction: row !important;
        }
        .about-founder-sec .flex-row-reverse {
            flex-direction: row-reverse !important;
        }
        .about-founder-sec .flex-row .text-black-box {
            padding-left: 50px;
            padding-right: 0;
        }
        .about-founder-sec .flex-row-reverse .text-black-box {
            padding-right: 50px;
            padding-left: 0;
        }
    }
    @media (min-width: 1536px) {
        .about-founder-sec .flex-row .text-black-box {
            padding-left: 100px;
            padding-right: 0;
        }
        .about-founder-sec .flex-row-reverse .text-black-box {
            padding-right: 100px;
            padding-left: 0;
        }
    }
    @media (min-width: 1750px) {
        .about-founder-sec .flex-row-reverse .text-black-box  {
            padding-right: 120px;
            padding-left: 0;
        }
        .about-founder-sec .flex-row .text-black-box  {
            flex-direction: row !important;
            padding-left:120px;
            padding-right: 0;
        }
    }
</style>

{% schema %}
{
    "name": "About founder",
    "settings": [
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "select",
            "id": "image_position",
            "label": "Image position (desktop)",
            "default": "flex-row",
            "options": [
                {
                    "value": "flex-row",
                    "label": "Left"
                },
                {
                    "value": "flex-row-reverse",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "image_picker",
            "id": "url-image",
            "label": "image"
        },
        {
            "type": "header",
            "content": "text"
        },
        {
            "type": "text",
            "id": "main_title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "content_description",
            "label": "Text"
        },
        {
            "type": "text",
            "id": "name",
            "label": "Text"
        },
        {
              "type": "header",
              "content": "Heading text"
          },
          {
            "type": "select",
            "id": "align__desktop",
            "label": "Text Alignment Desktop",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "select",
            "id": "align__mobile",
            "label": "Text Alignment Mobile",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "header",
            "content": "Style"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "label":"Color scheme",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "scheme-1",
                "label": "scheme 1"
              },
              {
                "value": "scheme-2",
                "label": "scheme 2"
              },
              {
                "value": "custom",
                "label": "custom (Set below)"
              }
            ]
        },
        {
            "type": "color",
            "id": "section_text_color_scheme",
            "default": "#847486",
            "label": "Custom Text Color"
        },
        {
            "type": "color",
            "id": "section_heading_color_scheme",
            "default": "#4B3B4C",
            "label": "Custom Heading Color"
        },
        {
            "type": "color",
            "id": "section_background_color_scheme",
            "default": "#E8E9F2",
            "label": "Custom Background Color"
        }
    ],
    "presets": [
        {
            "name": "About founder"
        }
    ]
}
{% endschema %}











