    </div>
    <div class="pl-5 md:pl-[30px] lg:px-[50px] 4xl:px-[65px] max-w-[2100px] mx-auto">
        {%- assign ugc-card = section.blocks | where: 'type', 'ugc-card' -%}
        {%- if ugc-card.size > 0 -%}
            <div class="Ugc-row swiper ugc-card-{{ ugc-card.size }} overflow-hidden pb-[34px] lg:pb[43px]">    
                <div class="swiper-wrapper">
                    {%- for block in ugc-card  -%}
                        <div class="swiper-slide">
                            <div class="Ugc-card">
                                {%- if block.settings.card-img != blank -%}
                                    <div class="Ugc-img">
                                        <img
                                            class="lazyload"
                                            src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" 
                                            data-src="{{ block.settings.card-img | img_url:'400x' }}" alt="{{ block.settings.card-img.alt }}">
                                    </div>
                                {%- endif -%}
                                <div class="ugc-content">
                                    <div class="flex items-center justify-between pb-[20px]">
                                        <div class="text-font10 font-medium uppercase">
                                            {{ block.settings.sub_title }}
                                        </div>
                                        {% render 'instagram-icon' %}
                                    </div>
                                    {{ block.settings.content_description }}
                                    <button class="share-btn" type="button">
                                        <svg width="13" height="13" viewBox="0 0 13 13" fill="none" xmlns="http://www.w3.org/2000/svg">
