                </svg>            
            </div>
        </div>
    </div>
</section>


<script>
    function docReady(fn){
      if (document.readyState === "complete" || document.readyState === "interactive"){
        setTimeout(fn, 1);
      } else {
        document.addEventListener("DOMContentLoaded", fn);
      }
    }
    docReady(function(){
        var swiper = new Swiper(".Ugc-row", {
            loop: false,     
            spaceBetween: 20,      
            navigation: {
                nextEl: ".swiper-button-next-ugc",
                prevEl: ".swiper-button-prev-ugc",
            },
            breakpoints: {
                0: {
                    slidesPerView: 1.1,
                    spaceBetween: 15,
                },
                600: {
                    slidesPerView: 1.4,
                    spaceBetween: 15,
                },
                767: {
                    slidesPerView: 2,
                    spaceBetween: 15,
                },
                1023: {
                    slidesPerView: 2.5,
                    spaceBetween: 15,
                },
                1279: {
                    slidesPerView: 3,
                    spaceBetween: 15,
                },
                1439: {
                    slidesPerView: 4,
                    spaceBetween: 15,
                },
                1650: {
                    slidesPerView: 5,
                    spaceBetween: 15,
                },
            }            
        });
    })
</script>


