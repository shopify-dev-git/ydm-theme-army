                <p class="order-2 sm:order-1">
                    {{ section.settings.rated_text }}
                </p>                
                <p class="order-2 sm:order-1">
                    {{ section.settings.rated_text_customers }}
                </p>                
            </div>                       
                <h2 class="mb-[30px]">
                    {{ section.settings.Heading }}
                </h2>
                <div class="inline-block max-w-[954px]">
                    <p>{{ section.settings.sub_text }}</p>
                </div>
