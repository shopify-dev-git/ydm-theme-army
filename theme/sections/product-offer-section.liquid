<div class="product-offer-section">
    <div class="container-custom container-p-0">
        {%- assign discountCard = section.blocks | where: 'type', 'product_discount_card' -%}
        {%- if discountCard.size > 0 -%}
            <div class="product-offer-list grid grid-cols-1 md:grid-cols-2">
                {%- for block in discountCard  -%}
                    <div class="product-list-card relative">
                        <div class="product-offer-img relative pt-[77%]">
                            <img class="lazyload absolute left-0 top-0 right-0 bottom-0 w-full h-full" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                             data-src="{{ block.settings.discount_img | img_url:'1000x' }}" alt="{{ block.settings.discount_img.alt }}">
                        </div>            
                        <div style="background: linear-gradient(180deg, rgba(75, 59, 76, 0) 0%, #4B3B4C 100%);" class="absolute left-0 right-0 bottom-0 h-[60%]"></div>
                        <div class="product-offer-content absolute left-0 right-0 px-[25px] py-[38px] md:px-[30px] lg:px-[50px] 4xl:px-[65px] lg:pb-11 2xl:pb-[57px] bottom-0 z-10">

                            {%- if  block.settings.discount_text != blank -%}     
                                <div class="discount-box mb-5 w-[58px] h-[58px] lg:w-[80px] lg:h-[80px] 2xl:w-[87px] 2xl:h-[87px] rounded-full p-[3px] border border-white text-center">
                                    <div class="w-full h-full rounded-full bg-puce-500 flex items-center justify-center text-font15 lg:text-font20 2xl:text-font26 font-dmserif lg:p-2 text-blackesh-100">
                                        {{ block.settings.discount_text }}
                                    </div>
                                </div>
                            {%- endif -%} 

                            <h2 class="mb-8 xl:mb-6 2xl:text-font45 text-white">
                                {{ block.settings.title }}
                            </h2>
                            <a href="{{ block.settings.url }}" class="text-font16 text-white tracking-4 flex items-center w-fit uppercase">
                                {{ block.settings.label_text }}
                                <svg class="ml-3" width="23" height="17" viewBox="0 0 23 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M22.0709 7.54162L14.9822 0.356378C14.7912 0.169399 14.5354 0.0659374 14.2699 0.0682761C14.0043 0.0706148 13.7504 0.178567 13.5626 0.368881C13.3748 0.559196 13.2683 0.816645 13.266 1.08578C13.2637 1.35492 13.3658 1.6142 13.5503 1.8078L18.9103 7.24086H1.10154C0.832959 7.24086 0.575383 7.34901 0.385471 7.5415C0.195559 7.734 0.0888672 7.99509 0.0888672 8.26732C0.0888672 8.53956 0.195559 8.80064 0.385471 8.99314C0.575383 9.18564 0.832959 9.29379 1.10154 9.29379H18.9103L13.5503 14.7269C13.4535 14.8215 13.3764 14.9348 13.3233 15.06C13.2702 15.1853 13.2423 15.32 13.2411 15.4563C13.24 15.5925 13.2656 15.7277 13.3165 15.8539C13.3674 15.98 13.4426 16.0946 13.5377 16.191C13.6328 16.2874 13.7459 16.3636 13.8703 16.4152C13.9948 16.4668 14.1281 16.4928 14.2626 16.4916C14.397 16.4904 14.5299 16.4621 14.6535 16.4083C14.777 16.3545 14.8888 16.2763 14.9822 16.1783L22.0709 8.99303C22.2607 8.80054 22.3673 8.5395 22.3673 8.26732C22.3673 7.99514 22.2607 7.73411 22.0709 7.54162Z" fill="white"/>
                                </svg>                            
                            </a>
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        {%- endif -%}                                               
    </div>
</div>




{% schema %}
{
    "name": "Product Discount Section",
    "settings": [                       
    ],
    "blocks": [
        {
            "type": "product_discount_card",
            "name": "Product discount Card",
            "settings": [
                {
                    "type": "text",
                    "id": "discount_text",
                    "label": "Offer Label",
                    "default":"50% Off"
                },
                {
                    "type": "image_picker",
                    "id": "discount_img",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default":"Start your glass skin transformation"
                },
                {
                    "type": "url",
                    "id": "url",
                    "label": "Button URL"                    
                },
                {
                    "type": "text",
                    "id": "label_text",
                    "label": "Button Label"                    
                }                
            ]
        }
    ],     
    "presets": [
        {
            "name": "Product Discount Section"
        }
    ]
}
{% endschema %}












