<section class="image_text_section  py-10 md:py-14 xl:py-20 section-{{section.id}} color-{{ section.settings.color_scheme }}" id="shopify-{{ section.id }}">
    <div class="container">
        <div class="image_text_row flex items-center flex-col {{ section.settings.image_position }}">
            <div class="image_panel lg:w-1/2">
                {%- if section.settings.url-image != blank -%}
                    <img class="lazyload w-full h-full object-cover" src="{{ section.settings.url-image | image_url }}" alt="{{ section.settings.url-image.alt }}">
                {%- endif -%}
            </div>
            <div class="text-black-box flex items-center p-10 md:p-16 xl:p-p70 flex-1">
                <div class="text-{{ section.settings.align_text }} w-full">
                    <h2 class="text-white pb-5 md:pb-6">
                        {{ section.settings.main_title }}
                    </h2>
                    <div class="text-white pb-5 md:pb-6">
                        {{ section.settings.content_description }}
                    </div>
                    <div class="inline-block">
                        {%- if section.settings.btn_link != blank -%}
                            <a href="{{ section.settings.btn_link }}" class="primary-btn">
                                {{ section.settings.btn_text }}
                            </a>
                        {%- endif -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
      
      .image_text_section .flex-col {
        flex-direction: column !important;
    }
    @media (min-width: 1023px) {
        .image_text_section .flex-row {
            flex-direction: row !important;
          }
          .image_text_section .flex-row-reverse {
            flex-direction: row-reverse !important;
        }
     }
</style>

{% schema %}
{
    "name": "Text with Image",
    "settings": [
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "select",
            "id": "image_position",
            "label": "Image position (desktop)",
            "default": "flex-row",
            "options": [
                {
                    "value": "flex-row",
                    "label": "Left"
                },
                {
                    "value": "flex-row-reverse",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "image_picker",
            "id": "url-image",
            "label": "image"
        },
        {
            "type": "header",
            "content": "text"
        },
        {
            "type": "text",
            "id": "main_title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "content_description",
            "label": "Text"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button link"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button label"
        },
        {
            "type": "select",
            "id": "align_text",
            "label": "Alignment Text",
            "default": "left",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "header",
            "content": "Style"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "label":"Color scheme",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "scheme-1",
                "label": "scheme 1"
              },
              {
                "value": "scheme-2",
                "label": "scheme 2"
              },
              {
                "value": "custom",
                "label": "custom (Set below)"
              }
            ]
        },
        {
            "type": "color",
            "id": "section_text_color_scheme",
            "default": "#847486",
            "label": "Custom Text Color"
        },
        {
            "type": "color",
            "id": "section_heading_color_scheme",
            "default": "#4B3B4C",
            "label": "Custom Heading Color"
        },
        {
            "type": "color",
            "id": "section_background_color_scheme",
            "default": "#E8E9F2",
            "label": "Custom Background Color"
        }
    ],
    "presets": [
        {
            "name": "Text with Image"
        }
    ]
}
{% endschema %}











