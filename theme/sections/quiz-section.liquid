{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<style>
    :root .section-{{section.id}}.color-custom {
      --theme-color:{{ section.settings.section_text_color_scheme }};
      --theme-heading:{{ section.settings.section_heading_color_scheme }};
      --theme-sub-heading:{{ section.settings.section_sub_heading_color_scheme }};
      --theme-link-color:{{ section.settings.section_links_color_scheme }};
      --theme-background:{{ section.settings.section_background_color_scheme }};
    }
</style>

<div class="quiz-section relative section-{{section.id}} color-{{ section.settings.color_scheme }} bg-gray-900">
    <div class="container">
        <div class="quiz-section-row lg:flex flex-row items-center  justify-center">
            <div class="quiz-img hidden lg:block mr-11 2xl:mr-20 4xl:mr-[107px] -mt-3 xl:-mt-8">
                {%- if section.settings.quiz-image != blank -%}           
                    <!-- Desktop Img -->
                    <img class="lazyload " src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                     data-src="{{ section.settings.quiz-image | img_url:'452x' }}" alt="{{ section.settings.quiz-image.alt }}">   
                {%- endif -%}
            </div>            
            <div class="quiz-section-content text-{{ section.settings.mobile_align_text }} lg:text-{{ section.settings.align_text }} mx-auto max-w-[635px] py-10">
                <h2 class="pb-5 2xl:pb-7">
                    {{ section.settings.main_title }}
                </h2>
                <div class="pb-5 2xl:pb-7">
                    {{ section.settings.content_description }}
                </div>
                <div class="inline-block">
                    {%- if section.settings.btn_link != blank -%}                    
                        <a {% if section.settings.btn_link == blank %} role="link" aria-disabled="true"{% else %} 
                            href="{{ section.settings.btn_link }}"{% endif %} 
                            class="{{ section.settings.button_color_scheme }} {{ settings.button_text_scheme }} {{ settings.button_corner_scheme }} {{ settings.button_border_width_scheme }}" {{ block.shopify_attributes }}>
                            {{ section.settings.btn_text | escape }}
                            {% include 'button-arrow' %}
                        </a>                    
                    {%- endif -%}
                </div>                                
            </div>
        </div>                      
    </div>
</div>


{% schema %}
{
    "name": "Quiz Section",
    "settings": [
        {
            "type": "header",
            "content": "Image"
        },
        {
            "type": "image_picker",
            "id": "quiz-image",
            "label": "Image"
        },                
        {
            "type": "header",
            "content": "text"
        },
        {
            "type": "text",
            "id": "main_title",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "content_description",
            "label": "Text"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button Label"
        },        
        {
            "type": "header",
            "content": "Style"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "label":"Color scheme",
            "default": "default",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "scheme-1",
                "label": "scheme 1"
              },
              {
                "value": "scheme-2",
                "label": "scheme 2"
              },
              {
                "value": "custom",
                "label": "custom (Set below)"
              }
            ]
          },
          {
            "type": "color",
            "id": "section_text_color_scheme",
            "default": "#2536CD",
            "label": "Custom Text Color"
          },
          {
            "type": "color",
            "id": "section_heading_color_scheme",
            "default": "#2092FB",
            "label": "Custom Heading Color"
          },
          {
            "type": "color",
            "id": "section_links_color_scheme",
            "default": "#2092FB",
            "label": "Custom Link Color"
          },        
          {
            "type": "color",
            "id": "section_background_color_scheme",
            "default": "#E8E9F2",
            "label": "Custom Background Color"
          },
          {
            "type": "header",
            "content": "Button style"
          },
          {
            "type": "select",
            "id": "button_color_scheme",
            "label":"Button Style",
            "default": "primary-btn",
            "options": [
              {
                "value": "primary-btn",
                "label": "Primary Button"
              },
              {
                "value": "secondary-btn",
                "label": "Secondary Button"
              },
              {
                "value": "link-btn",
                "label": "Link"
              }
            ]
        },
        {
            "type": "select",
            "id": "align_text",
            "label": "Desktop Text alignment",
            "default": "center",            
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "select",
            "id": "mobile_align_text",
            "label": "Mobile Text alignment",
            "default": "left",            
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Quiz Section"
        }
    ]
}
{% endschema %}
